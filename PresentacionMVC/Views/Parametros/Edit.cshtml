@model Negocio.EntidadesAuxiliares.Parametro

@{
    ViewData["Title"] = "Edit";
}
@if (TempData["Bien"] != null)
{
    <div class="alert alert-success p-3"> @TempData["Bien"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<h1>Edit</h1>

<h4>Parametro</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Nombre" class="control-label">Seleccione a que elemento le quiere cambiar el largo de la descripcion</label>
                <select asp-for="Nombre" name="Nombre" class="form-control">
                    <option value="Cabania">Cabaña</option>
                    <option value="Tipo">Tipo de Cabaña</option>
                </select>
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ValorMaximo" class="control-label"></label>
                <input asp-for="ValorMaximo" class="form-control" />
                <span asp-validation-for="ValorMaximo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ValorMinimo" class="control-label"></label>
                <input asp-for="ValorMinimo" class="form-control"/>
                <span asp-validation-for="ValorMinimo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
