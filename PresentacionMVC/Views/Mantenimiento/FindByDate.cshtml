@model PresentacionMVC.Models.BusquedaMantenimientoModel

@{
    ViewData["Title"] = "FindByDate";
}
@if (TempData["Bien"] != null)
{
    <div class="alert alert-success p-3"> @TempData["Bien"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}
<h1>Busqueda por fecha de mantenimiento</h1>

<h4>BusquedaMantenimientoModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="FindByDate">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="fecha1" class="control-label"></label>
                <input asp-for="fecha1" class="form-control" />
                <span asp-validation-for="fecha1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="fecha2" class="control-label"></label>
                <input asp-for="fecha2" class="form-control" />
                <span asp-validation-for="fecha2" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
