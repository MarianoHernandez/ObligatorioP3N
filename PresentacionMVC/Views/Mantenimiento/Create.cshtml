@model PresentacionMVC.Models.AltaMantenimientoViewModel


@{
    ViewData["Title"] = "Create";
}
@if (TempData["Bien"] != null)
{
    <div class="alert alert-success p-3"> @TempData["Bien"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<h1>Create</h1>
<h4>Mantenimiento de cabañas</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>



            <div class="form-group">
                <label asp-for="MantenimientoNuevo.fecha" class="control-label"></label>
                <input asp-for="MantenimientoNuevo.fecha" class="form-control" />
                <span asp-validation-for="MantenimientoNuevo.fecha" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MantenimientoNuevo.descripcion" class="control-label"></label>
                <input asp-for="MantenimientoNuevo.descripcion" class="form-control" />
                <span asp-validation-for="MantenimientoNuevo.descripcion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MantenimientoNuevo.costo" class="control-label"></label>
                <input asp-for="MantenimientoNuevo.costo" class="form-control" />
                <span asp-validation-for="MantenimientoNuevo.costo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MantenimientoNuevo.trabajador" class="control-label"></label>
                <input asp-for="MantenimientoNuevo.trabajador" class="form-control" />
                <span asp-validation-for="MantenimientoNuevo.trabajador" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                @using (Html.BeginForm("Create", "Mantenimiento", FormMethod.Post))
                {
                    @Html.HiddenFor(m => m.IdCabania)
                }
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
